    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "export MACOS=yes && make clean && make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "bin/$(ls bin/ | head -1)",
            "problemMatcher": []
        }
    ]
}